{
  "name": "bella-language-server",
  "displayName": "bella-language-server",
  "description": "Provide language support for Bella Programming Language",
  "publisher": "alexey-nikiforov",
  "icon": "bella-logo.png",
  "repository": {
    "url": "http://gitlab.hysdev.com/alexey.nikiforov/bella-language-support"
  },
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "bellaLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 10,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "bellaLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "bella",
        "aliases": [
          "Bella",
          "bella"
        ],
        "extensions": [
          ".bs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bella",
        "scopeName": "source.bs",
        "path": "./syntaxes/bella.grammar.json"
      }
    ],
    "commands": [
      {
        "command": "bellaLanguageSupport.openCookBook",
        "title": "Bella: Open Docs"
      }
    ]
  },
  "main": "./client/out/src/extension",
  "activationEvents": [
    "onLanguage:bella",
    "onCommand:bellaLanguageSupport.openCookBook"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build-all",
    "build-all": "tsc -p ./client && tsc -p ./server",
    "compile": "tsc -watch -p ./client",
    "watch": "tsc -b -w ./client",
    "compile-server": "tsc -watch -p ./server",
    "watch-server": "tsc -b -w ./server",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "package": "vsce package -o release/"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "typescript": "^2.1.5",
    "vscode": "^1.1.18"
  },
  "dependencies": {
    "vscode-languageclient": "~3.3.0"
  }
}
