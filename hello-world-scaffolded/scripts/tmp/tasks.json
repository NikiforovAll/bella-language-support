{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "powershell",
            "type": "shell",
            "args": [
                "-ExecutionPolicy",
                "Unrestricted",
                "-NoProfile",
                "-File",
                "./.vscode/Invoke.ps1"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Builds All Components",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run-component",
            "command": "powershell",
            "type": "shell",
            "args": [
                "-ExecutionPolicy",
                "Unrestricted",
                "-NoProfile",
                "-File",
                "./.vscode/Invoke.ps1", "-componentRegex","'${input:componentName}'", "-run"
                // "-componentRegex ${input:componentName}",
                // "-run $true"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Build and Run Component",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
          "id": "componentName",
          "description": "Specify regex expression for component name:",
          "type": "promptString"
          // type specific configuration attributes
        }
      ]
}
